<section class="container-fluid">
<div class="col-6 mx-auto d-flex align-items-center justify-content-center">
    <div class="container">
        <h1>Log In</h1>
        <form action="/login" method="POST">
            {{#if errorMessage}}
                <div class="alert alert-danger col-12 rounded p-2 m-2" role="alert">
                    {{errorMessage}}
                </div>
            {{/if}}
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="example@gmail.com" required>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" class="form-control" id="password" placeholder="Password123!!" required>
            </div>
            <button type="submit" class="btn btn-dark">Log In</button>
        </form>
    </div>
</div>
</section>